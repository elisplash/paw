{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "linden",
  "name": "OpenPawz",
  "description": "Your AI, your rules. A native desktop AI agent platform — private, powerful, extensible.",
  "logo": {
    "dark": "/images/pawz-logo.png",
    "light": "/images/pawz-logo.png",
    "href": "https://github.com/elisplash/paw"
  },
  "favicon": "/images/pawz-favicon.png",
  "colors": {
    "primary": "#ff00ff",
    "light": "#ff33ff",
    "dark": "#cc00cc"
  },
  "background": {
    "decoration": "grid"
  },
  "styling": {
    "eyebrows": "breadcrumbs"
  },
  "appearance": {
    "default": "dark"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/elisplash/paw"
      },
      {
        "label": "Discussions",
        "href": "https://github.com/elisplash/paw/discussions"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Download",
      "href": "https://github.com/elisplash/paw/releases"
    }
  },
  "banner": {
    "content": "**OpenPawz** is open source — [Star us on GitHub](https://github.com/elisplash/paw) and join the community!",
    "dismissible": true
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "icon": "github",
          "href": "https://github.com/elisplash/paw"
        },
        {
          "anchor": "Community",
          "icon": "message-circle",
          "href": "https://github.com/elisplash/paw/discussions"
        }
      ]
    },
    "groups": [
      {
        "group": "Getting Started",
        "icon": "rocket",
        "pages": [
          "start/getting-started",
          "start/installation",
          "start/first-agent",
          "start/first-provider"
        ]
      },
      {
        "group": "Guides",
        "icon": "book-open",
        "pages": [
          "guides/agents",
          "guides/memory",
          "guides/tasks",
          "guides/skills",
          "guides/integrations",
          "guides/extensions",
          "guides/voice",
          "guides/research",
          "guides/orchestrator",
          "guides/email",
          "guides/trading",
          "guides/slash-commands",
          "guides/automations",
          "guides/browser",
          "guides/tailscale",
          "guides/sessions",
          "guides/foundry",
          "guides/dashboard",
          "guides/projects",
          "guides/content-studio",
          "guides/container-sandbox",
          "guides/modular-workspace",
          "guides/pawzhub",
          "guides/pricing"
        ]
      },
      {
        "group": "Channels",
        "icon": "radio",
        "pages": [
          "channels/overview",
          "channels/telegram",
          "channels/discord",
          "channels/slack",
          "channels/matrix",
          "channels/irc",
          "channels/mattermost",
          "channels/nextcloud",
          "channels/nostr",
          "channels/twitch",
          "channels/webchat",
          "channels/whatsapp"
        ]
      },
      {
        "group": "Providers",
        "icon": "cpu",
        "pages": [
          "providers/overview",
          "providers/ollama",
          "providers/openai",
          "providers/anthropic",
          "providers/google",
          "providers/openrouter",
          "providers/deepseek",
          "providers/grok",
          "providers/mistral",
          "providers/moonshot",
          "providers/custom"
        ]
      },
      {
        "group": "Reference",
        "icon": "file-code",
        "pages": [
          "reference/architecture",
          "reference/security",
          "reference/quality",
          "reference/troubleshooting"
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/elisplash/paw"
    }
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "search": {
    "prompt": "Search OpenPawz docs..."
  },
  "seo": {
    "indexHiddenPages": false
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude"]
  }
}
