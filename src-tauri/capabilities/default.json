{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Full capability for the main window â€” Pawz agent has complete access",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-rename",
    "fs:allow-copy-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$HOME",
        "/tmp/**",
        "/tmp",
        "/**"
      ]
    },
    "shell:allow-open",
    "shell:allow-execute",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install"
  ]
}
